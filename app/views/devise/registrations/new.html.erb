<div class="row">
  <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
    <div class="panel panel-default border-black">
      <div class="panel-heading heading-bckgr-yellow">
      <center>
      <h3 class="no-margin">Sign up</h3>
      </center>
      </div>
      <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

          <div class="form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name,autofocus: true,  class: "form-control form-control-xl" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, class: "form-control form-control-xl" %>
        </div>

        <div class="form-group hidden">
          <%= f.label :role %><br />
          <%= f.text_field :role, value: "pending", class: "form-control form-control-xl" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control form-control-xl" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-xl" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-xl" %>
        </div>
        </div>
        <div class="panel-footer footer-bckgr-yellow">
          <%= f.submit "Sign up", class: "btn btn-primary btn-block btn-large" %>
        </div>
      <% end %>
     </div>
    </div>
  </div>
</div>