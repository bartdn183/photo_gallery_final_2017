<div class="row">
      <center>
    <h1 style="margin-bottom: 40px;font-family: 'Indie Flower', cursive;
">Bart & Monica's Picture Gallery</h1>
    </center>
</div>
<div class="row">
  <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
    <div class="panel panel-default">
     <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, required: true, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, required: true, autocomplete: "off", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "LOG IN", class: "btn btn-primary btn-block btn-large" %>
        </div>
      <% end %>
      <br />
      <%= render "devise/shared/links" %>
     </div>
    </div>
  </div>
</div>