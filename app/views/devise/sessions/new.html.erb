<div class="row">
      <center>
    <h1 style="font-weight: 700; margin-bottom: 40px;font-family: 'Indie Flower', cursive;
">Bart & Monica's Picture Gallery</h1>
    </center>
</div>
<div class="row">
  <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
    <div class="panel panel-default border-black">
      <div class="panel-heading heading-bckgr-yellow">
       <center>
          <h3 class="no-margin">LOG IN TO PICTURE GALLERY </h3>
        </center>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email %><br />
            <div class="input-group">
            <%= f.email_field :email, required: true, autofocus: true, class: "form-control form-control-xl", placeholder: "Email" %><div class="input-group-addon"><i class="icon-append fa fa-envelope"></i>
            </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password %><br />
            <div class="input-group">
            <%= f.password_field :password, required: true, autocomplete: "off", class: "form-control form-control-xl", placeholder: "Password" %>
              <div class="input-group-addon"><i class="icon-append fa fa-lock"></i></div>
            </div>
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
              <% end -%>
          </div>


          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          </div>
          <div class="panel-footer footer-bckgr-yellow">
            <%= f.submit "LOG IN", class: "btn btn-primary btn-block btn-large" %>
          </div>
        <% end %>

     </div>
    </div>
  </div>
</div>
