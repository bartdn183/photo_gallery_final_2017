<div class="jumbotron">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="panel panel-default border-black">
        <div class="panel-heading heading-bckgr-yellow">
          <center>
			<h3 class="no-margin">All Pending Users</h3>
		  </center>
        </div>
        <div class="panel-heading heading-bckgr-black">
        	<div class="row">
        		<div class="col-xs-12 col-sm-4 col-md-4 col-lg-3">
          			<%= link_to root_path, class: "btn btn-primary btn-block btn-large" do %> <i class="fa fa-home" aria-hidden="true"></i> HOME PAGE <% end %>
          		</div>
          		<div class="col-xs-12 col-sm-4 col-md-4 col-lg-3">
          			<%= link_to galleries_path, class: "btn btn-primary btn-block btn-large" do %> <i class="fa fa-camera" aria-hidden="true"></i> GALLERIES <% end %>
          		</div>
          	</div>
        </div>
       	<div class="panel-body">
       	  <div class="table-responsive">
            <table class="table table-striped" data-toggle="table">
				<thead>
				   <tr>
					<th data-sortable="true">First Name</th>
					<th data-sortable="true">Last Name</th>
					<th data-sortable="true">Email</th>
					<th data-sortable="true">Role</th>
					<th data-sortable="false">Select Role</th>
					<th data-sortable="false">Delete Request</th>
				   </tr>
				</thead>
			  	<tbody>
					<% @pending_users.each do |user| %>
						   <tr>
							<td><%= user.first_name %></td>
							<td><%= user.last_name %></td>
							<td><%= user.email %></td>
							<td><%= user.role %></td>
							<td>
								<%= form_tag('/update_role') do %>
									<div class="hidden">
										<%= number_field_tag :user, user.id %>
									</div>
									<%= select_tag(:role, options_for_select(User::ROLE), include_blank: "Select User Role", class: "form-control field-size-160", required: true, style: "display: inline-block;") %>
									<%= submit_tag "Update Role", class: "btn btn-primary btn-sm", data: { confirm: 'Are You Sure?', style: "display: inline-block;" } %>
								<% end %>
							</td>
							<td>
								<%= form_tag('/delete_account') do %>
									<div class="hidden">
										<%= number_field_tag :user, user.id %>
									</div>
									<p> <%= submit_tag "Delete Account", class: "btn btn-danger btn-sm", data: { confirm: 'Are You Sure?' } %></p>
								<% end %>
							</td>
						   </tr>
					<% end %>
				 </tbody>
			</table>
		  </div>
		</div>
	  </div>
	</div>
  </div>
</div>
