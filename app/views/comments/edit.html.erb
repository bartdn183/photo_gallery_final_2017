<div class="jumbotron">
  <div class="row">
	<div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
		<div class="panel panel-default border-black">
			<div class="panel-heading heading-bckgr-yellow">
			  <center>
			  	<h3 class="no-margin">EDIT COMMENT</h3>
			  </center>
			</div>
			<div class="panel-body">
				<%= form_for(@comment) do |f| %>
				  <% if @comment.errors.any? %>
				    <div id="error_explanation">
				      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

				      <ul>
				      <% @comment.errors.full_messages.each do |message| %>
				        <li><%= message %></li>
				      <% end %>
				      </ul>
				    </div>
				  <% end %>

				  <div class="form-group">
				    <%= f.text_area :comment_entry, required: true, class: "form-control", rows: 3 %>
				  </div>

				  <div class="field hidden">
				    <%= f.label :gallery_id %>
				    <%= f.number_field :gallery_id, value: @comment.gallery_id %>
				  </div>

				  <div class="field hidden">
				    <%= f.label :picture_id %>
				    <%= f.number_field :picture_id, value: @comment.picture.id %>
				  </div>

				  <div class="field hidden">
				    <%= f.label :user_id %>
				    <%= f.number_field :user_id, value: current_user.id %>
				  </div>

				  <div class="actions">
				    <%= f.submit "Set Comment", class: "btn btn-success btn-block btn-large" %>
				  </div>
				<% end %>
			</div>
			<div class="panel-footer footer-bckgr-yellow">
				<%= link_to 'BACK TO PICTURE', picture_path(id: @comment.picture_id), class: "btn btn-primary btn-block btn-large" %>
			</div>
		</div>
	</div>
  </div>
</div>
