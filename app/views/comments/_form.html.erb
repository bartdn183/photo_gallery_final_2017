<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_area :comment_entry, required: true, class: "form-control", rows: 2 %>
  </div>

  <div class="field hidden">
    <%= f.label :gallery_id %>
    <% if controller_name == "gallaries" %>
    <%= f.number_field :gallery_id, value: @picture.gallery_id %>
    <% else %>
    <%= f.number_field :gallery_id, value: @comment.gallery_id %>
    <% end %>
  </div>

  <div class="field hidden">
    <%= f.label :picture_id %>
    <% if controller_name == "gallaries" %>
    <%= f.number_field :picture_id, value: @picture.id %>
    <% else %>
    <%= f.number_field :picture_id, value: @comment.picture_id %>
    <% end %>
  </div>

  <div class="field hidden">
    <%= f.label :user_id %>
    <%= f.number_field :user_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= f.submit "Set Comment", class: "btn btn-success btn-block btn-large" %>
  </div>
<% end %>
